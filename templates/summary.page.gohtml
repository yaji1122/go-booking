{{template "base" .}}
{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Reservation Summary</h1>
                <hr>
                {{$res := index .Data "reservation"}}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td colspan="2">Result</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Name:</td>
                            <td>{{$res.FirstName}} {{$res.LastName}}</td>
                        </tr>
                        <tr>
                            <td>Arrival:</td>
                            <td>{{$res.StartDate}}</td>
                        </tr>
                        <tr>
                            <td>Departure:</td>
                            <td>{{$res.EndDate}}</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>{{$res.Email}}</td>
                        </tr>
                        <tr>
                            <td>phone:</td>
                            <td>{{$res.Phone}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{end}}
